<xsl:stylesheet version="2.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:java="java">

    <xsl:template match="/">
        <xsl:variable name="hamed" select="java:lang.String.new('hamed abdollahpour')"/>
        <xsl:variable name="index" select="java:indexOf($hamed, ' ')"/>
        <xsl:value-of select="java:substring($hamed, 0, $index)" />
    </xsl:template>
</xsl:stylesheet>